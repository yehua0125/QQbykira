package com.qq.server.view;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

import com.qq.server.db.SqHelper;
import com.qq.server.model.*;



public class UpDateQqPasswd extends JDialog implements ActionListener{
	JLabel jl1,jl2,jl3,jl4,jl5;
	
	JPanel jp1,jp2;
	
	JButton jb1,jb2;
	
	JPasswordField jpf1,jpf2;
	
	JTextField jtf1;
	
	String Passwd="";
	String QQID="";
	ManageQqSql mq;
	
	public static void main(String []args){
//		UpDateQqPasswd udpd=new UpDateQqPasswd();
		
	}
	
	
	public UpDateQqPasswd(Frame owner,String title,boolean modal,ManageQqSql mq,int rowNum)
	{	
		super(owner,title,modal);
		this.Passwd=((String) mq.getValueAt(rowNum, 1)).trim();
		this.QQID=(String)(mq.getValueAt(rowNum, 0));
		this.mq=mq;
		jl1=new JLabel("修改qq密码",JLabel.CENTER);
		jl5 =new JLabel((String)(mq.getValueAt(rowNum, 0)));
		jpf1=new JPasswordField();
		jpf2=new JPasswordField();
		
		jl2=new JLabel("QQ号码",JLabel.CENTER);
		jl3=new JLabel("新密码",JLabel.CENTER);
		jl4=new JLabel("确定密码",JLabel.CENTER);
		
		
		jp2=new JPanel(new GridLayout(3,2 ));
		
		jp2.add(jl2);
		jp2.add(jl5);
		jp2.add(jl3);
		jp2.add(jpf1);
		jp2.add(jl4);
		jp2.add(jpf2);
		
		jp1=new JPanel();
		jb1=new JButton("确定");
		jb1.addActionListener(this);
		jb2=new JButton("取消");
		jb2.addActionListener(this);
		
		jp1.add(jb1);
		jp1.add(jb2);
		
		this.add(jp2,"Center");
		this.add(jp1,"South");
		this.add(jl1,"North");
		
		this.setSize(310,200);
		
		this.setLocationRelativeTo(null);
		this.setVisible(true);
	
	}


	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		if(e.getSource()==jb1)
		{
			//确定修改的密码
			String ps1=new String(jpf1.getPassword());
			String ps2=new String(jpf2.getPassword());
			if(ps1.equals(""))
			{
				JOptionPane.showMessageDialog(this, "请输入密码");
				return;
			}else if(!ps1.equals(ps2)){
				JOptionPane.showMessageDialog(this, "密码不一致");
				return;
			}
			else if(ps1.equals(Passwd)){
				JOptionPane.showMessageDialog(this, "与旧密码一样");
				return;
			}else if(ps1.equals(ps2)){
				QQSQLModel qqsl=new QQSQLModel();
				//获取选定的qq号（放在第一个位子）
				if(qqsl.updateQQ(QQID, ps1)){
					JOptionPane.showMessageDialog(this, "修改成功！");
					this.dispose();
				}
				
				else JOptionPane.showMessageDialog(this, "出了问题");
			}
			
		}else if(e.getSource()==jb2)
		{
			//取消
			this.dispose();
		}
	}
	
	
}
